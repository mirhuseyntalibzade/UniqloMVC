@using UniqloDAL.Models;
@model IEnumerable<Category>;

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Categories</h1>

    <a asp-action="Create" asp-controller="Categories" asp-area="Admin">
        <button class="btn btn-success mb-3">
            Create
        </button>
    </a>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Is Active</th>
                            <th>Created Date</th>
                            <th>Updated Date</th>
                            <th>Deleted Date</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Category item in @Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.isActive</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.UpdatedDate</td>
                                <td>@item.DeletedDate</td>
                                <td>
                                    <a asp-controller="Categories" asp-action="Update" asp-area="Admin" asp-route-id="@item.Id">
                                        <button class="btn btn-warning text-white">Edit</button>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" asp-controller="Categories" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->